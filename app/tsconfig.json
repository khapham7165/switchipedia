{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "types": [
      "@types/styled-components-react-native",
      "node"
    ],
    "esModuleInterop": true,
    "paths": {
      "@components": ["./src/components"],
      "@utils": ["./src/utils"],
      "@contexts": ["./src/contexts"],
      "@interfaces": ["./src/interfaces"],
      "@hooks": ["./src/hooks"],
      "@constants": ["./src/constants"],
      "@configs": ["./src/configs"]
    }
  }
}
